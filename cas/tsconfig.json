{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "index.ts",
    "agents/src/**/*.ts",
    "agents/tests/**/*.ts",
    "packages/core/src/**/*.ts",
    "packages/core/tests/**/*.ts",
    "packages/sadd/lib/**/*.ts",
    "tools/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/dist",
    "**/dist/**",
    "**/*.js",
    "**/*.mjs",
    "**/*.test.ts",
    "**/node_modules",
    "**/node_modules/**",
    "apps/**",
    "packages/*/node_modules",
    "agents/*/node_modules",
    "**/storybook-static/**",
    "**/*.config.js",
    "**/*.config.mjs"
  ]
}