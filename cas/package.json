{
  "name": "cas-workspace",
  "version": "2.0.0",
  "description": "CAS - Contextual Autonomous System Platform",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "ts-node index.ts",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "cas:update-plan": "bash scripts/update-dev-plan.sh",
    "cas:view-plan": "cat agents/developer/planning/cas-feature-dev-plan.md",
    "cas:status": "echo '=== CAS Agent Status ===' && ls -lh agents/*/planning/*.md",
    "cas:help": "cat CAS-USER-GUIDE.md",
    "cas:request": "cat CAS-USER-GUIDE.md | grep -A 50 'Requesting CAS Tasks'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tutorwise/tutorwise",
    "directory": "cas"
  },
  "keywords": [
    "devops",
    "automation",
    "autonomous",
    "service-management",
    "ai-powered"
  ],
  "author": "TutorWise Team",
  "license": "MIT",
  "devDependencies": {
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "comments": {
    "migration": "Support for runtime abstraction layer - can switch between custom and LangGraph runtimes via CAS_RUNTIME env var",
    "roadmap": "Phase 1: Abstraction layer, Phase 2: LangGraph POC, Phase 3: Gradual migration, Phase 4: Advanced features"
  },
  "dependencies": {
    "@langchain/core": "^1.1.28",
    "@langchain/langgraph": "^1.1.5",
    "@langchain/langgraph-checkpoint-postgres": "^1.0.1",
    "langsmith": "^0.3.0"
  }
}
