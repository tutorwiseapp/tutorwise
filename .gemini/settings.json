{
  "model": {
    "name": "gemini-pro"
  },
  "temperature": 0.7,
  "maxTokens": 4096,
  "contextMode": "full",
  "streamingEnabled": true,
  "contextSources": {
    "jira": {
      "enabled": true,
      "maxTickets": 30,
      "includeSubtasks": true,
      "includeComments": true
    },
    "github": {
      "enabled": true,
      "maxIssues": 20,
      "maxPullRequests": 10,
      "includeLabels": true
    },
    "calendar": {
      "enabled": true,
      "dayRange": 30,
      "includeAnalysis": true
    },
    "googleDocs": {
      "enabled": true,
      "maxDocuments": 10,
      "includeContent": true
    },
    "mermaid": {
      "enabled": true,
      "includeRendered": true
    },
    "mainPrompt": {
      "enabled": true,
      "maxLength": 3000
    }
  },
  "commands": {
    "chat": {
      "defaultContextMode": "minimal",
      "enableStreaming": true
    },
    "analyze": {
      "defaultContextMode": "full",
      "includeRelatedTickets": true,
      "includeProjectPatterns": true
    },
    "review": {
      "defaultContextMode": "full",
      "includeCodingStandards": true,
      "includeSecurityChecks": true
    },
    "debug": {
      "defaultContextMode": "full",
      "includeErrorPatterns": true,
      "includeSimilarIssues": true
    },
    "plan": {
      "defaultContextMode": "full",
      "includeSprintContext": true,
      "includeCalendarContext": true
    }
  },
  "outputFormats": {
    "markdown": true,
    "codeBlocks": true,
    "bullets": true,
    "numberedLists": true
  },
  "contextOptimization": {
    "enableCaching": true,
    "cacheTimeout": 3600,
    "compressOldTickets": true,
    "prioritizeActiveWork": true
  },
  "integrationSettings": {
    "autoSync": false,
    "syncBeforeAnalysis": true,
    "validateContext": true,
    "requireAuthentication": true
  }
}