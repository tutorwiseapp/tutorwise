{
  "model": {
    "name": "gemini-1.5-pro-latest",
    "temperature": 0.1,
    "maxTokens": 8192,
    "safetySettings": {
      "harassment": "BLOCK_NONE",
      "hateSpeech": "BLOCK_NONE",
      "sexuallyExplicit": "BLOCK_NONE",
      "dangerousContent": "BLOCK_NONE"
    }
  },
  "context": {
    "sources": {
      "prompt": true,
      "jira": true,
      "github": true,
      "calendar": true,
      "mermaid": true,
      "googleDocs": true
    },
    "maxContextLength": 100000,
    "prioritySources": ["prompt", "jira"],
    "cachingEnabled": true,
    "refreshInterval": 3600
  },
  "commands": {
    "chat": {
      "enabled": true,
      "systemPrompt": "You are an AI development assistant for Tutorwise, providing specific, actionable guidance based on project context.",
      "includeCodeAnalysis": true
    },
    "analyze": {
      "enabled": true,
      "includeImplementationPlan": true,
      "includeEffortEstimate": true,
      "includeDependencies": true
    },
    "review": {
      "enabled": true,
      "checkSecurity": true,
      "checkPerformance": true,
      "checkPatterns": true
    },
    "debug": {
      "enabled": true,
      "includeStackTrace": true,
      "suggestSolutions": true
    },
    "plan": {
      "enabled": true,
      "analyzeProgress": true,
      "suggestPriorities": true
    }
  },
  "output": {
    "format": "markdown",
    "includeTimestamp": false,
    "streaming": true,
    "colorOutput": true
  },
  "integrations": {
    "jira": {
      "enabled": true,
      "autoSync": false,
      "syncInterval": 1800
    },
    "github": {
      "enabled": true,
      "autoSync": false,
      "syncInterval": 1800
    },
    "calendar": {
      "enabled": true,
      "autoSync": false,
      "syncInterval": 3600
    }
  },
  "performance": {
    "concurrentRequests": 3,
    "requestTimeout": 30000,
    "retryAttempts": 2,
    "enableCaching": true
  }
}