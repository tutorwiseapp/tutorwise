# Gemini CLI Configuration Template
# Copy this file to .env.local in project root and fill in your values

# Required: Gemini AI API Key
GOOGLE_AI_API_KEY=your_gemini_api_key_here

# Optional: Jira Integration
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your_jira_api_token
JIRA_PROJECT_KEY=TUTORWISE

# Optional: GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_OWNER=your-github-username
GITHUB_REPO=tutorwise

# Optional: Google Services (Calendar, Docs)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
your_private_key_content_here
-----END PRIVATE KEY-----"

# Optional: Advanced Configuration
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=4096
GEMINI_CONTEXT_MODE=full
GEMINI_STREAMING=true

# Optional: Context Settings
GEMINI_CACHE_TIMEOUT=3600
GEMINI_MAX_JIRA_TICKETS=30
GEMINI_MAX_GITHUB_ISSUES=20
GEMINI_CALENDAR_DAYS=30

# Optional: Debug Settings
GEMINI_DEBUG=false
GEMINI_LOG_REQUESTS=false
GEMINI_LOG_RESPONSES=false
GEMINI_VERBOSE=false