{
  "role": "tutor",
  "description": "Upload configuration for tutors - full access to create and share teaching materials",
  "allowedTypes": [
    {
      "extension": ".pptx",
      "mimeType": "application/vnd.openxmlformats-officedocument.presentationml.presentation",
      "maxSize": 52428800,
      "description": "PowerPoint presentations"
    },
    {
      "extension": ".ppt",
      "mimeType": "application/vnd.ms-powerpoint",
      "maxSize": 52428800,
      "description": "Legacy PowerPoint"
    },
    {
      "extension": ".pdf",
      "mimeType": "application/pdf",
      "maxSize": 26214400,
      "description": "PDF documents"
    },
    {
      "extension": ".docx",
      "mimeType": "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
      "maxSize": 26214400,
      "description": "Word documents"
    },
    {
      "extension": ".doc",
      "mimeType": "application/msword",
      "maxSize": 26214400,
      "description": "Legacy Word"
    },
    {
      "extension": ".xlsx",
      "mimeType": "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
      "maxSize": 10485760,
      "description": "Excel spreadsheets"
    },
    {
      "extension": ".md",
      "mimeType": "text/markdown",
      "maxSize": 5242880,
      "description": "Markdown files"
    },
    {
      "extension": ".txt",
      "mimeType": "text/plain",
      "maxSize": 5242880,
      "description": "Plain text"
    }
  ],
  "totalStorageLimit": 536870912,
  "singleFileLimit": 52428800,
  "permissions": {
    "canUpload": true,
    "canDelete": true,
    "canShare": true,
    "canOrganise": true,
    "namespaces": ["user", "shared"],
    "shareTargets": ["students", "organisation"]
  },
  "processing": {
    "autoEmbed": true,
    "extractImages": true,
    "preserveFormatting": true,
    "generateSummary": true
  },
  "visibility": {
    "defaultNamespace": "user",
    "defaultVisibility": "private",
    "canSetPublic": true
  }
}
