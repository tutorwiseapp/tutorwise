# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-project-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database
POSTGRES_URL_NON_POOLING=postgresql://postgres:password@localhost:5432/tutorwise

# Ably (WiseSpace v5.8 - Real-time collaboration)
NEXT_PUBLIC_ABLY_API_KEY=your-ably-api-key

# Redis (Free Help Now v5.9 - Real-time presence)
UPSTASH_REDIS_REST_URL=https://your-redis-endpoint.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-webhook-secret
STRIPE_PREMIUM_PRICE_ID=price_your-premium-price-id

# Email (Resend)
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=Tutorwise Admin <noreply@tutorwise.io>
RESEND_REPLY_TO_EMAIL=support@tutorwise.io

# Google OAuth (Optional - for WiseSpace Phase 2)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Referrals (v6.0 - Hierarchical Attribution)
REFERRAL_COOKIE_SECRET=your-64-char-hex-secret-generate-with-openssl-rand-hex-32

# Organisation Premium Subscription (v8.0 - Feature Flag Integration)
# Toggle subscription paywall on/off (default: true)
# Set to 'false' during development to disable paywall
NEXT_PUBLIC_ENABLE_SUBSCRIPTION_PAYWALL=true

# Trial period duration in days (default: 14)
# Production: 14 | Testing: 30 | Quick Test: 1
NEXT_PUBLIC_TRIAL_DAYS=14

# Monthly subscription price (default: 50)
# GBP: 50 | USD: 60 | EUR: 55
NEXT_PUBLIC_SUBSCRIPTION_PRICE=50

# Currency (default: GBP)
# Supported: GBP, USD, EUR
NEXT_PUBLIC_SUBSCRIPTION_CURRENCY=GBP
